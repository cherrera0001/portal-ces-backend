{
	"main": ".src/index.js",
	"scripts": {
		"myTest": "clear; NODE_ENV=test nyc --check-coverage --lines 70 --branches 10 --statements 40 --functions 40 --reporter=lcov --reporter=text-summary babel-node ./node_modules/.bin/_mocha --timeout 12000 --exit ./test/getCheckListEndpoint.test.js",
		"test": "clear; NODE_ENV=test NODE_PATH=./src nyc --check-coverage --lines 70 --branches 10 --statements 40 --functions 40 --reporter=lcov --reporter=text-summary babel-node ./node_modules/.bin/_mocha --timeout 12000 --exit ./test/**/**/*.test.js",
		"test-staging": "clear; NODE_ENV=staging nyc --check-coverage --lines 90 --branches 15 --statements 40 --functions 40 --reporter=lcov --reporter=text-summary babel-node ./node_modules/.bin/_mocha --timeout 12000 --exit ./test/**/*.test.js",
		"testView": "clear; NODE_ENV=test nyc --check-coverage --lines 90 --branches 15 --statements 40 --functions 90 --reporter=html --reporter=text babel-node ./node_modules/.bin/_mocha --timeout 12000 --exit ./test/**/**/*.test.js",
		"start": "clear; NODE_PATH=./src DEBUG='app, route, mongo' node src/index.js",
		"start-test": "clear; NODE_ENV=test DEBUG='app, route, mongo' nodemon src/index.js --exec babel-node -e js",
		"debug": "clear; DEBUG='app, route, mongo' nodemon --inspect -w src/index.js --exec babel-node debug src/index.js",
		"clean": "rm -rf dist",
		"lint-staged": "lint-staged",
		"lint-review": "clear; eslint ./src/**/**/*.js"
	},
	"husky": {
		"hooks": {
			"pre-push": "docker-compose run api npm test"
		}
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix",
			"git add"
		],
		"*.(js)": [
			"precise-commits",
			"git add"
		]
	},
